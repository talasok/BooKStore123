@model BookStore.Models.Account
@{
    ViewData["IsCategoryHide"] = true;

}
<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form asp-action="Register">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">@(ViewBag.ErrorMessage != null? ViewBag.ErrorMessage: "I am a new customer")</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="FullName">Full Name</label>
                                <input asp-for="FullName" class="mb-0 form-control" type="text" id="name"
                                       placeholder="Enter your full name">
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="UserName">Email</label>
                                <input asp-for="UserName" class="mb-0 form-control" type="email" id="email" placeholder="Enter Your Email Address Here..">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label for="password">Repeat Password</label>
                                <input name="RepeatPassword"  class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
                            </div>
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-outlined" value="Register"/>
                                @*<a href="#" class="btn btn-outlined">Register</a>*@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form  method = "post"  asp-action = "Login" >
                        @*asp-route-returnurl = "@Model.ReturnUrl">*@
                    <div class="login-form">
                        <h4 class="login-title">Returning Customer</h4>
                        <p><span class="font-weight-bold">@(ViewBag.Message!=null? ViewBag.Message:"I am a returning customer") </span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label  asp-for="UserName">Enter your email address here...</label>
                                <input asp-for="UserName" class="mb-0 form-control" type="email" id="email1"
                                       placeholder="Enter you email address here...">
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="col-12 mb--20">
                                <label  asp-for="Password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control" type="password" id="login-password" placeholder="Enter your password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-12">
                                <input class="btn btn-outlined" type="submit" value="Login" />
                                @*<a href="#" class="btn btn-outlined">Login</a>*@
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
